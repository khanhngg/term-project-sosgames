<div class="container">
  <form class="form-signin" method="POST" action="/game">
    <div class="text-center mb-4">
      <img src="./images/unoLoginLogo.png" width="60%">
      <h1>Create Game</h1>
      <hr>
      <% include error.ejs %>
    </div>
    <div class="form-label-group">
      <input type="text" id="inputGameName" class="form-control" name="gameName" placeholder="Game Name" required autofocus>
      <label for="inputGameName">Game Name <small>(4 - 20 characters)</small></label>
    </div>

    <div class="form-label-group">
      <input type="text" id="inputNumberOfPlayers" class="form-control" name="numberOfPlayers" placeholder="Number of Players" min="2" max="12" required autofocus>
      <label for="inputNumberOfPlayers">Number of Players <small>(2 - 10)</small></label>
    </div>
   
    <hr>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Create Game</button>

    <a href="/lobby" class="btn btn-lg btn-danger btn-block" role="button">
      Cancel
    </a>
    <hr>

  </form>
</div>